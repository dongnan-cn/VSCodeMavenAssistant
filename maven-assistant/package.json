{
  "name": "maven-assistant",
  "displayName": "Maven Assistant",
  "description": "A powerful Maven dependency management and analysis tool for VSCode, it provides features like dependency tree, conflict analysis and other features.",
  "version": "1.0.3",
  "publisher": "dngjb",
  "author": {
    "name": "dongnan",
    "email": "your.email@example.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/your-username/VSCodeMavenAssistant#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/VSCodeMavenAssistant.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/VSCodeMavenAssistant/issues"
  },
  "keywords": [
    "maven",
    "java",
    "dependency",
    "pom",
    "build",
    "lsp",
    "language-server",
    "dependency-management",
    "conflict-resolution",
    "project-management"
  ],
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "icon": "resources/maven-icon.png",
  "galleryBanner": {
    "color": "#C71A36",
    "theme": "dark"
  },
  "activationEvents": [
    "onLanguage:xml",
    "onLanguage:java",
    "onCommand:maven-assistant.openMavenPanel",
    "onCommand:maven-assistant.runMavenGoal",
    "onCommand:maven-assistant.editMavenGoal"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "maven-assistant.openMavenPanel",
        "title": "Maven Assistant: 打开Maven面板",
        "category": "Maven"
      },
      {
        "command": "maven-assistant.runMavenGoal",
        "title": "Maven Assistant: 运行Maven目标",
        "category": "Maven"
      },
      {
        "command": "maven-assistant.editMavenGoal",
        "title": "Maven Assistant: 编辑Maven目标",
        "category": "Maven"
      },
      {
        "command": "maven-assistant.quickRun",
        "title": "Maven Assistant: 快速运行",
        "category": "Maven"
      },
      {
        "command": "maven-assistant.showDependencyTree",
        "title": "Maven Assistant: 显示依赖树",
        "category": "Maven"
      },
      {
        "command": "maven-assistant.analyzeDependencies",
        "title": "Maven Assistant: 分析依赖",
        "category": "Maven"
      },
      {
        "command": "maven-assistant.showDependencyConflicts",
        "title": "Maven Assistant: 显示依赖冲突",
        "category": "Maven"
      },
      {
        "command": "maven-assistant.showEffectivePom",
        "title": "Maven Assistant: 显示有效POM",
        "category": "Maven"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "maven-assistant.openMavenPanel",
          "when": "workspaceHasMavenProject"
        },
        {
          "command": "maven-assistant.quickRun",
          "when": "workspaceHasMavenProject"
        },
        {
          "command": "maven-assistant.showDependencyTree",
          "when": "workspaceHasMavenProject"
        },
        {
          "command": "maven-assistant.analyzeDependencies",
          "when": "workspaceHasMavenProject"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "maven-assistant",
          "title": "Maven Assistant",
          "icon": "resources/maven-icon.png"
        }
      ]
    },
    "views": {
      "maven-assistant": [
        {
          "id": "maven-assistant.goals",
          "name": "Maven 目标",
          "when": "workspaceHasMavenProject"
        },
        {
          "id": "maven-assistant.dependencies",
          "name": "依赖管理",
          "when": "workspaceHasMavenProject"
        },
        {
          "id": "maven-assistant.conflicts",
          "name": "依赖冲突",
          "when": "workspaceHasMavenProject"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "maven-assistant.goals",
        "contents": "Maven 目标管理\n\n[打开 Maven 面板](command:maven-assistant.openMavenPanel)\n[快速运行](command:maven-assistant.quickRun)\n[编辑目标](command:maven-assistant.editMavenGoal)"
      },
      {
        "view": "maven-assistant.dependencies",
        "contents": "依赖结构分析\n\n[显示依赖树](command:maven-assistant.showDependencyTree)\n[分析依赖](command:maven-assistant.analyzeDependencies)\n[显示有效POM](command:maven-assistant.showEffectivePom)"
      },
      {
        "view": "maven-assistant.conflicts",
        "contents": "依赖冲突检测\n\n[显示依赖冲突](command:maven-assistant.showDependencyConflicts)"
      }
    ],
    "configuration": {
      "title": "Maven Assistant",
      "properties": {
        "maven-assistant.useTerminalCommand": {
          "type": "boolean",
          "default": false,
          "description": "是否使用自定义终端命令运行Maven"
        },
        "maven-assistant.terminalCommand": {
          "type": "string",
          "default": "mvn",
          "description": "自定义Maven命令（如mvnd）"
        },
        "maven-assistant.enableDelete": {
          "type": "boolean",
          "default": true,
          "description": "是否启用删除功能"
        },
        "maven-assistant.resolveWorkspaceArtifacts": {
          "type": "boolean",
          "default": false,
          "description": "是否解析工作区构件"
        },
        "maven-assistant.autoRefreshDependencies": {
          "type": "boolean",
          "default": true,
          "description": "是否自动刷新依赖信息"
        },
        "maven-assistant.showTransitiveDependencies": {
          "type": "boolean",
          "default": true,
          "description": "是否显示传递依赖"
        }
      }
    },
    "customEditors": [
      {
        "viewType": "maven-assistant.dependencyAnalyzer",
        "displayName": "Dependency Assistant",
        "selector": [
          {
            "filenamePattern": "**/pom.xml"
          }
        ],
        "priority": "default",
        "supportsMultipleEditorsPerDocument": false
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build:all",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "build:webview": "cd webview-ui && npm run build",
    "build:all": "npm run build:webview && npm run compile",
    "package": "vsce package",
    "publish": "vsce publish",
    "clean": "rimraf out dist",
    "prebuild": "npm run clean"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "vscode-languageclient": "^8.0.2"
  }
}
